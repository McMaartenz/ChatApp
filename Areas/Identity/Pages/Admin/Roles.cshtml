@page "{id?}"
@model ChatApp.Areas.Identity.Pages.Admin.RolesModel
@{
    int FormId = 0;
}

<div asp-validation-summary="All" class="text-danger m-2"></div>

<table class="table table-sm table-striped table-bordered">
    <thead>
        <tr>
            <th>Role</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.Roles)
        {
            FormId++;

            <tr>
                <td>@r</td>
                <form method="post" id=@("deleteForm"+FormId)>
                    <input type="hidden" name="roleName" value="@r"/>
                </form>
                <td>
                    <button type="submit" form=@("deleteForm"+FormId)
                            class="btn btn-sm btn-danger"
                            asp-page-handler="DeleteRole">
                        Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>


<h1>Add New Role</h1>
<form method="post" id="addForm">
    <div class="row">
        <div class="col">
            <select class="form-control" name="roleName">
                <option value="Administrator">Administrator</option>
                <option value="ChatModerator">Chat moderator</option>
            </select>
        </div>
        <div class="col">
            <button asp-page-handler="AddRole" type="submit"
                    class="btn btn-sm btn-success">
                Add
            </button>
        </div>
    </div>
</form>